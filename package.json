{
  "name": "gasoline",
  "version": "0.1.2",
  "description": "State management library for lazy programmers",
  "scripts": {
    "test": "tsc --noemit && jest --verbose",
    "b:_clean": "rm -rf ./build ./dist",
    "b:_build": "tsc && rollup -c",
    "b:_minify": "babili --source-maps=true -o build/step-2/gasoline.min.js build/step-2/gasoline.js",
    "b:_dist": "cp -R ./build/step-2 ./dist && cp -R ./build/typings ./dist/typings",
    "b:_remove_build_dir": "rm -rf ./build",
    "build": "yarn b:_clean && yarn b:_build && yarn b:_minify && yarn b:_dist && yarn b:_remove_build_dir",
    "prepublishOnly": "yarn test && yarn build"
  },
  "files": [
    "./dist/"
  ],
  "main": "dist/gasoline.js",
  "types": "dist/typings/index.d.ts",
  "jsnext:main": "dist/gasoline.mjs",
  "module": "dist/gasoline.mjs",
  "author": "Rudolfs Vikmanis <rudolfs.vikmanis@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/rvikmanis/gasoline.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "@types/node": "^7.0.18",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^15.0.25",
    "@types/zen-observable": "0.5",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "6",
    "babel-jest": "^19.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelrc-rollup": "^3.0.0",
    "babili": "^0.0.12",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^20.0.4",
    "react": "^15.6.1",
    "rollup": "^0.49.2",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rxjs": "5",
    "shallow-equals": "^1.0.0",
    "toposort-class": "^1.0.1",
    "ts-jest": "^20.0.4",
    "tslint": "^5.4.2",
    "typescript": "2.4",
    "ws": "2.3.1",
    "zen-observable": "0.7"
  },
  "peerDependencies": {
    "react": "^15.6.1"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "globals": {},
    "testPathIgnorePatterns": [
      "<rootDir>/examples/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*\\.test\\.(ts|tsx)",
      "<rootDir>/src/**/*\\.spec\\.(ts|tsx)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "dependencies": {}
}
